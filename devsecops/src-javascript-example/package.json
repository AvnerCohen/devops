{
  "name": "LJUS",
  "version": "2.0.0",
  "description": "Nya Wermlands-Tidningen design system implementation",
  "scripts": {
    "bundle:prod": "webpack --config ./bundling/configs/prod/webpack.config.js --define process.env.NODE_ENV=\"'production'\"",
    "bundle:dev": "webpack --config ./bundling/configs/dev/webpack.config.js",
    "bundle:watch": "npm run bundle:dev -- --watch",
    "server:prod": "http-server --cors ./dist -p7774 -c3600 -g",
    "server:dev": "http-server --cors ./dist -p7774 -c-1 -g",
    "style:dev": "./bundling/scripts/styles/build.js -t:docs",
    "style:prod": "node ./bundling/scripts/styles/build.js -p",
    "style:watch": "onchange './src/scss/**/*.scss' -i -- npm run style:dev",
    "handlebars": "node bundling/scripts/handlebars/build.js",
    "handlebars:watch": "onchange './src/docs/**/*.hbs' -i -- npm run handlebars",
    "svg": "node ./bundling/scripts/svg/build.js",
    "svg:watch": "onchange './src/images/icons/**/*.svg' -i -- npm run svg",
    "images": "copyfiles --exclude \"./src/images/icons/*\" --up 2 \"./src/images/**/*\" \"./dist/images/\"",
    "images:watch": "onchange \"./src/images/**/*\" -i -- npm run images",
    "fonts": "copyfiles --flat \"./src/fonts/**/*\" \"./dist/fonts/\"",
    "fonts:watch": "onchange \"./src/fonts/**/*\" -i -- npm run fonts",
    "lint:js": "eslint ./src/js/**/*.js; exit 0",
    "lint:watch:js": "onchange './src/js/**/*.js' -i -- npm run lint:js",
    "lint:css": "stylelint \"./src/scss/**/*.{css,less,scss,sass}\" json --config .stylelint.json; exit 0",
    "lint:css:watch": "onchange \"./src/scss/**/*.{css,less,scss,sass}\" -i -- npm run --silent lint:css",
    "lint": "npm run lint:js && npm run lint:css -s",
    "static:js": "copyfiles --flat './src/js/static/*.js' './dist/js/'",
    "static:watch": "onchange './src/js/static/*.js' -i -- npm run static:js",
    "dev": "concurrently -n style,bundle,handlebars,svg,server,images,fonts,lintJS,lintCSS,static \"npm run style:watch\" \"npm run bundle:watch\" \"npm run handlebars:watch\" \"npm run svg:watch\" \"npm run server:dev\" \"npm run images:watch\" \"npm run fonts:watch\" \"npm run lint:watch:js\" \"npm run lint:css:watch\" \"npm run static:watch\"",
    "build": "concurrently -n style,handlebars,bundle,svg,images,fonts,static \"npm run style:prod\" \"npm run handlebars\" \"npm run bundle:prod\" \"npm run svg\" \"npm run images\" \"npm run fonts\" \"npm run static:js\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "NWT",
  "devDependencies": {
    "autoprefixer": "8.6.3",
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.6",
    "babel-loader": "7.1.5",
    "babel-minify": "0.4.3",
    "babel-plugin-transform-object-assign": "6.22.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-minify": "0.4.3",
    "chalk": "2.4.1",
    "concurrently": "3.6.1",
    "copyfiles": "2.1.0",
    "cssnano": "3.10.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "glob": "7.1.3",
    "handlebars": "4.0.12",
    "http-server": "0.11.1",
    "jshint": "2.9.6",
    "node-sass": "4.9.3",
    "onchange": "4.1.0",
    "stylelint": "9.5.0",
    "stylelint-config-recommended-scss": "3.2.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-scss": "3.1.3",
    "svg-sprite": "1.4.0",
    "svg-sprite-loader": "3.8.0",
    "webpack": "4.19.0",
    "webpack-cli": "2.1.5"
  },
  "dependencies": {
    "axios": "0.18.0",
    "babel-core": "6.26.3",
    "core-js": "2.5.7",
    "element-closest": "2.0.2",
    "intersection-observer": "0.5.0",
    "js-cookie": "2.2.0",
    "lodash": "4.17.11",
    "qs": "6.5.2",
    "smoothscroll-polyfill": "0.4.3",
    "svg4everybody": "2.1.9",
    "growl": "1.10.0",
    "vanilla-lazyload": "8.15.2",
    "jquery": "1.11.3"
  }
}
